# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym m resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"
bindsym $mod+Shift+x mode "$mode_system"

set $screens_layout Config screens layout - Standalone HiDPI (s) - Dual screen 1080p (w)

mode "$screens_layout" {
    bindsym w exec --no-startup-id xrandr --output eDP-1 --mode 1920x1200 --output DP-1-0 --off --output DP-1-1 --off --output DP-1-2 --off --output DP-1-3 --off --output HDMI-1-0 --off --output DP-1-4 --off --output $escreen --mode 1920x1080 --right-of $iscreen && echo "Xft.dpi: 120" | xrdb -override && i3-msg restart && sleep 1 && ~/.fehbg, mode "default"
    bindsym s exec --no-startup-id xrandr --output eDP-1 --mode 2560x1600 --output DP-1-0 --off --output DP-1-1 --off --output DP-1-2 --off --output DP-1-3 --off --output HDMI-1-0 --off --output DP-1-4 --off && echo "Xft.dpi: 160" |xrdb -override && i3-msg restart && sleep 1 && ~/.fehbg, mode "default"
    

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+shift+p mode "default"
}
bindsym $mod+Shift+p mode "$screens_layout"
bindsym $mod+p exec "echo $PATH > i3path"

set $transparent #00000080
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
exec_always --no-startup-id "picom -b --config ~/.config/picom/picom.conf"
bar {
    strip_workspace_numbers yes
    position top
    i3bar_command i3bar --transparency
    status_command i3status -c ~/.config/i3status/config
    colors {
        background $transparent
    }
}
